<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shp_rect_rounded_white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingStart="26dp"
        android:paddingTop="15dp"
        android:paddingEnd="26dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="Calender"
            android:textSize="@dimen/fontsize_normal"
            android:textStyle="bold"/>


        <ast.billmanagment.mybills.MaterialCalendar.materialcalendarview.MaterialCalendarView
            android:id="@+id/dlg_reorder_mcv_calndr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:mcv_selectionColor="@color/blue"
            app:mcv_showOtherDates="decorated_disabled" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_weight="0.33">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/shp_circle_blue" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:includeFontPadding="false"
                    android:text="Current Date"
                    android:textSize="@dimen/fontsize_tiny" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_weight="0.30">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/shp_circle_green" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:includeFontPadding="false"
                    android:text="Available"
                    android:textSize="@dimen/fontsize_tiny" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_weight="0.36">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/shp_circle_red" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:includeFontPadding="false"
                    android:text="Due Date"
                    android:textSize="@dimen/fontsize_tiny" />

            </LinearLayout>




        </LinearLayout>


        <Button
            android:id="@+id/dlg_reorder_btn_done"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height_large"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/shp_rect_rounded_yellow_mini_stoke"
            android:ellipsize="end"
            android:gravity="center"
            android:includeFontPadding="false"
            android:lines="1"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:paddingBottom="@dimen/button_font_padding"
            android:text="Select"
            android:textColor="@color/thm_yellow_1"
            android:textSize="@dimen/fontsize_mini"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>
