<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_alignParentEnd="true"
        android:gravity="end"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:background="@color/white_1"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/thm_yellow_1"
            android:gravity="start"
            android:orientation="vertical">


            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <ast.billmanagment.mybills.Utils.CircleImageView
                    android:id="@+id/lay_navigationview_imv_user"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerInParent="true"
                    android:elevation="2dp"
                    android:padding="2dp"
                    android:src="@drawable/ic_user_placeholder" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lay_nav_txv_name"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:paddingEnd="10dp"
                    android:text="Usama"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fontsize_medium"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lay_nav_txv_iqamaID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:paddingEnd="10dp"
                    android:text="Address \nId 213123"
                    android:textAlignment="center"
                    android:textColor="@color/black_1"
                    android:textSize="@dimen/fontsize_mini" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_navview_ll_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/white_1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="48"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"

                            android:text="100"
                            android:textColor="@color/black_1"
                            android:textSize="@dimen/fontsize_mini"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"

                            android:text="Paid"
                            android:textColor="@color/black_1"
                            android:textSize="@dimen/fontsize_tiny" />


                    </LinearLayout>

                    <RelativeLayout

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="52">

                        <View
                            android:layout_width="1dp"
                            android:layout_height="16dp"
                            android:layout_centerVertical="true"
                            android:background="@color/dark_gray3"
                            android:paddingTop="25dp"
                            android:paddingBottom="25dp" />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="100"
                                android:textColor="@color/app_red_color"
                                android:textSize="@dimen/fontsize_mini"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="Due"
                                android:textColor="@color/app_red_color"
                                android:textSize="@dimen/fontsize_tiny" />
                        </LinearLayout>


                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    android:background="@color/dark_gray3" />
            </LinearLayout>


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:paddingStart="0dp">

               

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:includeFontPadding="false"
                    android:paddingEnd="14dp"
                    android:text="My Bills"
                    android:textColor="@color/black_1"
                    android:textSize="@dimen/fontsize_mini"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:paddingStart="0dp">

               

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:includeFontPadding="false"
                    android:paddingEnd="14dp"
                    android:text="Edit Profile"
                    android:textColor="@color/black_1"
                    android:textSize="@dimen/fontsize_mini"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:paddingStart="0dp">

               

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:includeFontPadding="false"
                    android:paddingEnd="14dp"
                    android:text="History"
                    android:textColor="@color/black_1"
                    android:textSize="@dimen/fontsize_mini"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:paddingStart="0dp">

               

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:includeFontPadding="false"
                    android:paddingEnd="14dp"
                    android:text="Payment Methods"
                    android:textColor="@color/black_1"
                    android:textSize="@dimen/fontsize_mini"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:paddingStart="0dp">

               

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:includeFontPadding="false"
                    android:paddingEnd="14dp"
                    android:text="Logout"
                    android:textColor="@color/black_1"
                    android:textSize="@dimen/fontsize_mini"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>